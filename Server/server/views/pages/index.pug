extends layout

append head
    link(rel="stylesheet" href="/styles/index.css")

block content
    div(id="home" class="d-flex flex-column align-items-center justify-content-center text-center text-white px-2 h-100")
        
        div(class="title mb-4")= title
        div(class="lead mb-4")
            strong 1-to-1 video calls
        div(class="lead mb-4") 
            strong Simply select a person you want a video call with

        button(id="startNowBtn" type="button" class="btn btn-warning btn-lg mt-md-3 mt-sm-1 mt-0 mb-md-4 mb-sm-1 mb-0") Start Now

        div(class="mt-3 mb-3")
            div(class="btn-group")
                a(href="/l/links/terms-of-use" class="text-white" target="_blank")
                    small Terms of Use
                a(href="/l/links/privacy-policy" class="px-3 text-white" target="_blank")
                    small Privacy Policy
                a(href="/l/links/contact" class="text-white" target="_blank")
                    small Contact Us

        footer(class="")
            div(class="text-center text-white")
                small Copyright Â©. All rights reserved.

append scripts
    script.
        $('#startNowBtn').on('click', function () {
            window.location.href = '/c/chat';
        });